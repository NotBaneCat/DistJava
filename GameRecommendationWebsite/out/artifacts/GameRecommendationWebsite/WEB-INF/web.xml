<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>GameHome</servlet-name>
        <servlet-class>us.seanlewis.game.controller.GameHomeController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>GameHome</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cartPlace</servlet-name>
        <servlet-class>us.seanlewis.game.controller.CartPlaceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cartPlace</servlet-name>
        <url-pattern>/gimme.gimme</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>us.seanlewis.game.controller.CartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/gimme.cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>genre</servlet-name>
        <servlet-class>us.seanlewis.game.controller.GenreController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>genre</servlet-name>
        <url-pattern>/gimme.genre</url-pattern>
    </servlet-mapping>
</web-app>